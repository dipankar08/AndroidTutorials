<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"  android:layout_height="match_parent" android:layout_width="match_parent">
    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/ic_launcher" android:layout_height="match_parent" android:layout_width="match_parent" />
    <TextView
        android:id="@+id/label"
        android:textAllCaps="true" android:layout_height="match_parent" android:layout_width="match_parent"
        android:textSize="20dp" />
</LinearLayout>